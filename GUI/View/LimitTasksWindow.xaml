<Window x:Class="GUI.View.LimitTasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.View"
        mc:Ignorable="d"
        Title="Column Limit" Height="263.1" Width="455.6">
    <Grid Margin="20">
        <TextBox Text="{Binding Path=ColumnID, Mode=OneWayToSource}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Margin="195,42,0,0"/>
        <Label Content="Column ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,38,0,0"/>
        <Label Content="Limit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="107,69,0,0"/>
        <TextBox Text="{Binding Path=ColumnLimit, Mode=OneWayToSource}" HorizontalAlignment="Left" Height="23" Margin="195,73,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Content="Apply" Name="ApplyLimit" HorizontalAlignment="Left" Height="28" Margin="195,104,0,0" VerticalAlignment="Top" Width="75" Click="ApplyLimit_Click"/>
        <Label Content="{Binding Path=Message, Mode=OneWay}" HorizontalAlignment="Left" Margin="57,152,0,0" VerticalAlignment="Top" Height="32" Width="270"/>


    </Grid>
</Window>
